<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OtpActivity">

    <ImageView
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/_8sdp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_4sdp"
            android:text="Verify"
            android:fontFamily="@font/myfont"
            android:textSize="@dimen/_14ssp"
            />
        <TextView
            android:id="@+id/tv_otp_phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_4sdp"
            android:text="12345671"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/myfont"
            android:textSize="@dimen/_14ssp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the OTP number to verify your phone number"
        android:textSize="@dimen/_9ssp"
        android:fontFamily="@font/myfont"
        android:gravity="center"
        android:padding="@dimen/_4sdp"
        android:layout_gravity="center"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_8sdp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp"
            android:gravity="center"
            android:layout_margin="@dimen/_10sdp"
            >
           <com.mukeshsolanki.OtpView
               android:id="@+id/otpView_otp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_4sdp"
               android:inputType="number"
               android:itemBackground="#B6B6B6"
               android:focusableInTouchMode="true"
               app:OtpItemCount="6"
               app:OtpViewType="line"
               app:OtpLineColor="#FDAC91"
               />

            <Button
                android:id="@+id/btn_otp_continue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continue"
                android:padding="@dimen/_8sdp"
                android:backgroundTint="#FF5722"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/_8sdp"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>